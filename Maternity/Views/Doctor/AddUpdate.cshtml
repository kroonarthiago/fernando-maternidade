@using Maternity.Models
@model DoctorModel
@{
    ViewBag.Title = "AddUpdate";
}

<script type="text/javascript">



    const options = {
        onKeyPress: function (phone, e, field, options) {
            const masks = ['(00) 00000-0000', '(00) 0000-0000#'];
            console.log(phone.length);
            const mask = (phone.length > 14) ? masks[0] : masks[1];
            $('.phone').mask(mask, options);
        },
        placeholder: "(__) ____-____" 
    };

    $(document).ready(function () {

        $(".phone").mask('(00) 0000-0000#', options);
        $(".crm").mask("000000-0/SS", { placeholder: "______-_/__" });

    });

</script>



<h2>AddUpdate</h2>

@using (Html.BeginForm("AddUpdate", "Doctor", FormMethod.Post))
{

    <h4>Doctor</h4>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2">Name:</label>
            @Html.TextBoxFor(m => Model.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Crm:</label>
            @Html.TextBoxFor(m => Model.Crm, new { @class = "form-control crm" })
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Phone:</label>
            @Html.TextBoxFor(m => Model.Phone, new { @class = "form-control phone" })
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Specialty:</label>
            @Html.TextBoxFor(m => Model.Specialty, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>

}
<p>@Html.ActionLink("Go back", "Index", "Doctor")</p>

